nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark.shadow-lg
  .container
    a.navbar-brand.d-flex(href='/')
      span.sr-only StyleShop
      img(src='images/favicon.png' height='30' alt='StyleShop logo')
