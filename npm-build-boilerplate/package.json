{
  "name": "application",
  "version": "1.0.0",
  "description": "A few words about this application.",
  "author": "Tej Kahlon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tpkahlon/npm-app"
  },
  "bugs": "https://github.com/tpkahlon/npm-app/issues",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "uncss": "run-s uncss_bootstrap uncss_style",
    "uncss_bootstrap": "uncss dist/*.html -H dist -C css -i [/.affix/,/.alert/,/.close/,/.collapse/,/.fade/,/.has/,/.help/,/.in/,/.modal/,/.open/,/.popover/,/.tooltip/] -s \"bootstrap.css\" -S \"style.css\",\"fonts.css\",\"vendor/*.css\" > dist/css/bootstrap.min.css",
    "uncss_style": "uncss dist/*.html -C css -H dist -i [/.affix/,/.alert/,/.close/,/.collapse/,/.fade/,/.has/,/.help/,/.in/,/.modal/,/.open/,/.popover/,/.tooltip/] -s \"style.css\" -S \"bootstrap.css\",\"fonts.css\",\"vendor/*.css\" > dist/css/style.min.css",
    "bs": "copyfiles -f node_modules/bootstrap-sass/assets/stylesheets/bootstrap/_variables.scss app/sass/",
    "bsx": "rimraf app/sass/_variables.scss",
    "clean": "rimraf dist",
    "gulp": "gulp",
    "favicon-generate": "real-favicon generate faviconDescription.json faviconData.json dist/icons/",
    "favicon-html": "real-favicon inject faviconData.json dist dist/*.html",
    "favicon-update": "real-favicon check-for-update --fail-on-update faviconData.json",
    "copy": "mkdirp dist/js/vendor -p && mkdirp dist/css/vendor -p && mkdirp dist/fonts -p && run-s vendor_css vendor_js vendor_fonts vendor_media vendor_player",
    "vendor_css": "copyfiles -f node_modules/mediaelement/build/mediaelementplayer.min.css node_modules/bootstrap-select/dist/css/bootstrap-select.min.css dist/css/vendor",
    "vendor_js": "copyfiles -f node_modules/mediaelement/build/mediaelement-and-player.min.js node_modules/html5shiv/dist/html5shiv.min.js app/js/respond.min.js app/js/bootstrap-fixes.js node_modules/jquery/dist/jquery.min.js node_modules/bootstrap-sass/assets/javascripts/bootstrap.min.js node_modules/bootstrap-select/dist/js/bootstrap-select.min.js node_modules/bootstrap-validator/dist/validator.min.js node_modules/picturefill/dist/picturefill.min.js dist/js/vendor",
    "vendor_fonts": "copyfiles -f node_modules/font-awesome/fonts/**/*.* node_modules/bootstrap-sass/assets/fonts/bootstrap/**/*.* dist/fonts",
    "vendor_media": "rimraf dist/media && cp -r app/media dist/",
    "vendor_player": "copyfiles -f node_modules/mediaelement/build/*.{svg,png} dist/css/vendor",
    "styles": "run-s lint-scss scss autoprefixer",
    "scss": "node-sass --output-style compressed -o dist/css app/sass",
    "lint-scss": "stylelint app/sass/**/*.scss --syntax scss || true",
    "autoprefixer": "postcss --no-map -u autoprefixer -r dist/css/*.css",
    "scripts": "run-s js-transform lint uglify",
    "js-transform": "mkdirp dist/js -p && babel app/js/custom.js -o dist/js/custom.js",
    "lint": "eslint app/js/custom.js || true",
    "uglify": "uglifyjs dist/js/custom.js -cmo dist/js/custom.js",
    "svgs": "svgo -f app/images/icons -o dist/images/icons && npm run sprites",
    "sprites": "svg-sprite-generate -d app/images/icons -o dist/images/sprite.svg",
    "html": "pug --pretty app/pug/pages/*.pug -o dist && run-s favicon-html bootlint beautify",
    "minifier": "html-minifier --input-dir dist/ --output-dir dist/ --file-ext html --collapse-whitespace --remove-comments --minify-js --minify-css",
    "bootlint": "bootlint ./dist/*.html || true",
    "beautify": "js-beautify -qrtf ./dist/*.html",
    "serve": "browser-sync start --server --serveStatic dist --files \"dist/css/*.css, dist/js/*.js, **/*.html, app/pug/pages/*.pug, dist/images/*.*, !node_modules\"",
    "all": "run-s clean copy favicon-generate vendor_player html styles scripts svgs gulp watch",
    "watch:css": "onchange \"app/sass\" -- run-s styles",
    "watch:js": "onchange \"app/js\" -- run-s scripts",
    "watch:html": "onchange \"app/pug/_includes\" \"app/pug/_layouts\" \"app/pug/_partials\" \"app/pug/pages\" -- run-s html",
    "watch:images": "onchange \"app/images\" -- run-s gulp svgs",
    "watch:fonts": "onchange \"dist/fonts\" -- run-s fonts",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s all"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "bootlint": "^0.16.6",
    "bootstrap-sass": "^3.3.7",
    "bootstrap-select": "^1.12.2",
    "bootstrap-validator": "^0.11.9",
    "browser-sync": "^2.13.0",
    "cli-real-favicon": "0.0.8",
    "copyfiles": "^2.1.0",
    "eslint": "^5.16.0",
    "font-awesome": "^4.7.0",
    "gulp": "^4.0.2",
    "gulp-google-webfonts": "2.1.0",
    "gulp-humans": "^2.0.2",
    "gulp-imagemin": "^6.0.0",
    "gulp-robots": "^2.0.4",
    "html-minifier": "^4.0.0",
    "html5shiv": "^3.7.3",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-optipng": "^7.0.0",
    "imagemin-svgo": "^7.0.0",
    "jquery": "^3.2.1",
    "js-beautify": "^1.6.12",
    "mediaelement": "^4.2.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.1",
    "npm-run-all": "^4.0.2",
    "onchange": "^6.0.0",
    "picturefill": "^3.0.2",
    "postcss-cli": "^6.1.2",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "stylelint": "^10.1.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.2.2",
    "uglify-js": "^3.0.26"
  }
}
