            a.dropdown-item(href='/web-design.html', class=(bodyClass === 'services--web-design' ? 'active' : '')) Web design
            a.dropdown-item(href='/web-development.html', class=(bodyClass === 'services--web-development' ? 'active' : '')) Web development
            a.dropdown-item(href='/graphic-design.html', class=(bodyClass === 'services--graphic-design' ? 'active' : '')) Graphic design
            a.dropdown-item(href='/web-hosting.html', class=(bodyClass === 'services--web-hosting' ? 'active' : '')) Web hosting
            a.dropdown-item(href='/seo.html', class=(bodyClass === 'services--seo' ? 'active' : '')) SEO
            a.dropdown-item(href='/marketing.html', class=(bodyClass === 'services--marketing' ? 'active' : '')) Marketing