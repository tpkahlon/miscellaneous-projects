include ../_includes/menus/navigation
.jumbotron
  .container
    h1.display-4 Contact us
.container
  .row
    .col.col-12
      form.form(action="https://formspree.io/tejpartapsingh91@gmail.com" method="POST")
        label(for="firstName") Please fill out details below to get in touch with us:
        .form-group
          label.sr-only(for="firstName") First Name
          input#firstName.form-control(type="text", placeholder="First name", required, name="firstname")
        .form-group
          label.sr-only(for="lastName") Last Name
          input#lastName.form-control(type="text", placeholder="Last name", required, name="lastname")
        .form-group
          label.sr-only(for="emailAddress") Email Address
          input#emailAddress.form-control(type="email", placeholder="Email Address", required, name="email")
        .form-group
          label.sr-only(for="phoneNumber") Phone Number
          input#phoneNumber.form-control(type="phone", placeholder="Phone Number", required, name="phone")
        .form-group
          label.sr-only(for="phoneNumber") Shipping Address in Vietnam
          input#phoneNumber.form-control(type="text", placeholder="Shipping Address in Vietnam", required, name="address")
        .form-group
          label.sr-only(for="source") How did you hear about us?
          select#source.selectpicker.w-100(type="phone", placeholder="How did you hear about us?", required, name="source")
            option(disabled, selected) Please select a platform
            option(value="Google") Google
            option(value="Facebook") Facebook
            option(value="Twitter") Twitter
            option(value="Instagram") Instagram
            option(value="LinkedIn") LinkedIn
            option(value="Referral") Referral
            option(value="Others") Others
        .form-group
          label.sr-only(for="message") Message
          textarea#message.form-control(placeholder="Message", required, name="message")
        .form-group
          button.btn.btn-primary.btn-lg(type="submit", name="submit") Submit
  include ../_includes/blocks/footer
