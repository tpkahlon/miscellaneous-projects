{
  "name": "minhsify",
  "version": "1.0.0",
  "description": "A few words about Minhsify.",
  "author": "Tej Kahlon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tpkahlon/minhsify"
  },
  "bugs": "https://github.com/tpkahlon/minhsify/issues",
  "keywords": [
    "yarn"
  ],
  "scripts": {
    "bs": "copyfiles -f node_modules/bootstrap/scss/{_variables.scss,_functions.scss} app/sass",
    "bsx": "rimraf app/sass/{_variables.scss,_functions.scss}",
    "clean": "rimraf dist",
    "f-make": "real-favicon generate faviconDescription.json faviconData.json dist",
    "f-inject": "real-favicon inject faviconData.json dist dist/*.html",
    "f-update": "real-favicon check-for-update --fail-on-update faviconData.json",
    "m-dirs": "mkdirp dist/js/vendor -p && mkdirp dist/css/vendor -p && mkdirp dist/fonts -p",
    "v-css": "rimraf dist/css/vendor && copyfiles -f ANY_VENDOR_CSS_LIBRARY_STYLSHEETS_GOES_HERE dist/css/vendor",
    "v-js": "rimraf dist/js/vendor && copyfiles -f node_modules/jquery/dist/jquery.min.js node_modules/bootstrap/dist/js/bootstrap.min.js node_modules/popper.js/dist/umd/popper.min.js dist/js/vendor",
    "v-fonts": "rimraf dist/fonts && copyfiles -f node_modules/font-awesome/fonts/**/*.* dist/fonts",
    "v-text": "rimraf dist/*.txt && copyfiles -f app/text/*.txt dist/",
    "scss": "node-sass --source-map true --output-style indented app/sass -o dist/css",
    "scss-o": "node-sass --source-map false --output-style compressed app/sass -o dist/css",
    "l-scss": "stylelint app/sass/**/*.scss --syntax scss || true",
    "a-scss": "postcss --map -u autoprefixer -r dist/css/*.css",
    "js": "mkdirp dist/js -p && babel app/js/custom.js -o dist/js/custom.js",
    "l-js": "eslint app/js/custom.js --fix || true",
    "u-js": "uglifyjs dist/js/custom.js -co dist/js/custom.js",
    "svgs": "svgo -f app/images/icons -o dist/images/icons",
    "ssg": "svg-sprite-generate -d app/images/icons -o dist/images/sprite.svg",
    "html": "pug --pretty app/pug/pages -o dist/",
    "l-html": "bootlint ./dist/*.html || true",
    "b-html": "js-beautify --type='html' -qrt ./dist/**/*.html",
    "images": "imagemin app/images/* --out-dir dist/images",
    "copy": "run-s m-dirs v-js v-fonts v-text",
    "pages": "run-s f-inject l-html",
    "styles": "run-s l-scss scss a-scss",
    "styles-o": "run-s l-scss scss-o a-scss",
    "scripts": "run-s js l-js u-js",
    "watch:css": "watch 'yarn styles' \"app/sass\"",
    "watch:js": "watch 'yarn scripts' \"app/js\"",
    "watch:html": "watch 'run-s html pages' \"app/pug\"",
    "watch:images": "watch 'run-s images svgs' \"app/images\"",
    "watch": "run-p watch:css watch:js watch:html watch:images",
    "start": "browser-sync start --server --serveStatic dist --files \"dist/css/*.css, dist/js/*.js, **/*.html, dist/images/*.*, !node_modules\"",
    "postinstall": "yarn f-make",
    "dev": "run-p copy html pages styles scripts svgs ssg images watch start",
    "build": "run-s clean copy f-make html pages styles-o scripts svgs ssg images"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "bootlint": "^0.16.6",
    "bootstrap": "^4.1.3",
    "browser-sync": "^2.24.7",
    "cli-real-favicon": "0.0.8",
    "copyfiles": "^2.1.0",
    "eslint": "^6.1.0",
    "font-awesome": "^4.7.0",
    "fs-extra": "^8.0.1",
    "graceful-fs": "^4.1.11",
    "imagemin-cli": "^5.0.0",
    "jquery": "^3.3.1",
    "js-beautify": "^1.7.5",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^6.0.0",
    "popper.js": "^1.14.4",
    "postcss-cli": "^6.1.2",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.2",
    "stylelint": "^10.1.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.2.2",
    "uglify-js": "^3.4.8",
    "watch": "^1.0.2",
    "yarn": "^1.9.4"
  }
}
